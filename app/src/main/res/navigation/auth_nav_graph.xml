<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/splashAuthFragment">

    <fragment
        android:id="@+id/splashAuthFragment"
        android:name="com.iti.flex_meals.authActivity.splashFragment.view.SplashAuthFragment"
        android:label="fragment_splash_auth"
        tools:layout="@layout/fragment_splash_auth" >
        <action
            android:id="@+id/action_splashAuthFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.iti.flex_meals.authActivity.loginFragment.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.iti.flex_meals.authActivity.registerFragment.view.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
</navigation>